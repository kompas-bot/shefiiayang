    <script>
        function showSpecialMessage() {
            const message = document.getElementById('special-message');
            message.style.display = 'block';
            
            // Tambahkan efek konfeti sederhana
            const buttons = document.querySelectorAll('.cta-button');
            buttons.forEach(button => {
                button.innerHTML = '<i class="fas fa-gift"></i> Terima Kasih Sayang!';
                button.style.background = 'linear-gradient(120deg, #4facfe 0%, #00f2fe 100%)';
            });
        }
    </script>
